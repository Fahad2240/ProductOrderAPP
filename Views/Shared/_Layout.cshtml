<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DotNET</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DotNET.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ProductOrder</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Products">Products</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Orders">Orders</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Orders" asp-action="CreateOrder">Create Order</a>
                        </li>
                        <li>
                            <a class="nav-link text-dark" asp-controller="Orders" asp-action="UpdateOrderQuantity">Update Order</a>
                        </li>
                        <li>
                            <a class="nav-link text-dark" asp-controller="Orders" asp-action="DeleteOrder">Delete Order</a>
                        </li>
                        <li>
                            <a class="nav-link text-dark" asp-controller="Orders" asp-action="GetLowStockProducts">Products Having Less Than 100 Stocks</a>
                        </li>
                        @* <li> *@
                        @*     <a class="nav-link text-dark" asp-controller="Orders" asp-action="UpdateOrderQuantity">Update Order</a> *@
                        @* </li> *@
                        @* <li><a href="@Url.Action("DeleteOrder", "Order")">Delete Order</a></li> *@
                        @* <li><a href="@Url.Action("LowStockProducts", "Order")">Low Stock Products</a></li> *@
                        @* <li><a href="@Url.Action("TopCustomers", "Order")">Top Customers</a></li> *@
                        @* <li><a href="@Url.Action("UnorderedProducts", "Order")">Unordered Products</a></li> *@
                        @* <li><a href="@Url.Action("BulkOrderCreation", "Order")">Bulk Order Creation</a></li> *@
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @* <footer class="border-top footer text-muted"> *@
    @*     <div class="container"> *@
    @*         &copy; 2024 - DotNET - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a> *@
    @*     </div> *@
    @* </footer> *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
