@{
    ViewData["Title"] = "Specify Order Count";
}

<div class="text-center">
    <h2>How many orders do you want to make?</h2>

    <form class="mt-5 d-flex" method="post" asp-action="GenerateOrderForm" asp-controller="Orders">
        <div>
            <label for="orderCount">Number of Orders:</label>
            <input type="number" id="orderCount" name="orderCount" class="mt-5 form-control" min="1" required />
        </div>
        <button type="submit" class="mt-5 btn btn-primary">Next</button>
    </form>
</div>
